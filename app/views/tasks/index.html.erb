<h1>TASK MANAGER v.1.1.6</h1>

<h2>Welcome back, Mr. Stark. This is your list of <strong>unfinished</strong> tasks </h2>


<% @tasks.each do |task| %>
  <h2><%= task.id %> -- <%= task.name %></h2>
  <p> <strong>Goal-Content:</strong> <%= task.content %></p>
  <p> <%= link_to 'Show', task_path(task) %> </p>
  <p> <%= link_to 'Edit', edit_task_path(task) %> </p>
  <p> <%= link_to 'Delete', task_path(task), method: :delete, data: {confirm: "Please Authorize Data Purge"} %> </p>
  <p></p>
<% end %>

 <h2> <%= link_to 'New task', new_task_path %> </h2>
